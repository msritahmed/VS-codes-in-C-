#include<stdio.h>
int main()
{
    int a[32];
    int b,j;

    printf("enter the number\n");
    scanf("%d",&b);
    int i=0;
    while(b>0)
    {
        a[i]=b%2;
        b/=2;
        i++;
        }
    printf("binary number\n");
    for(j=i-1;j>=0;j--)
    {
        printf("%d",a[j]);
    }
    return 0;


}          
